<% if @title: %>
    <label class="control-label"><%= @title %></label>
<% end %>
<div class="element">
    <% if @type isnt 'checkbox': %>
        <%- @element %>
    <% else: %>
        <div class="togglebutton">
            <label><%- @element %></label>
        </div>
    <% end %>
    <% if @description: %>
	<div class="help-block description"><%- @description %></div>
    <% end %>
</div>
